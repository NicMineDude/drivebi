{
  "manifest_version": 3,
  "name": "DriveBi",
  "description": "Extension that optimizes my driving course experience by automating tasks and providing useful features.",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34-dEff.png"
  },
  "icons": {
    "128": "icon-128-dEff.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon-128-dEff.png", "icon-34-dEff.png"],
      "matches": []
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "windows",
    "webNavigation",
    "contextMenus",
    "declarativeContent"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
